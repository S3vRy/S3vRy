Unattended-Upgrade::Allowed-Origins {
    "origin=Debian,codename={{ ansible_distribution_release }},label=Debian-Security";
    "origin=Debian,codename={{ ansible_distribution_release }},label=Debian";
};

Unattended-Upgrade::AutoFixInterruptedDpkg "true";
Unattended-Upgrade::MinimalSteps "true";
Unattended-Upgrade::Remove-Unused-Kernel-Packages "true";
Unattended-Upgrade::Remove-Unused-Dependencies "true";
Unattended-Upgrade::Automatic-Reboot "{{ 'true' if unattended_upgrades_auto_reboot else 'false' }}";
Unattended-Upgrade::Automatic-Reboot-Time "02:00";

{% if unattended_upgrades_mail %}
Unattended-Upgrade::Mail "root";
{% endif %}

Unattended-Upgrade::DevRelease "false";
Unattended-Upgrade::PackageBlacklist {
};

// This will allow packages that were installed via apt to be removed.
Unattended-Upgrade::Remove-New-Unused-Dependencies "true";
Unattended-Upgrade::Remove-Unused-Kernel-Packages "true";
Unattended-Upgrade::Remove-Unused-Dependencies "true";

// Automatic reboot (WITHOUT CONFIRMATION) if
//  the file /var/run/reboot-required is found after the upgrade
Unattended-Upgrade::Automatic-Reboot "{{ 'true' if unattended_upgrades_auto_reboot else 'false' }}";

// If automatic reboot is enabled and needed, reboot at the specific
// time instead of immediately
//  Default: "now"
Unattended-Upgrade::Automatic-Reboot-Time "02:00";

// Use apt bandwidth limit feature, this example limits the download
// speed to 70MB/sec
// Unattended-Upgrade::DownloadLimit "70";

// Allow automatic reboot when there are no users logged in
Unattended-Upgrade::Automatic-Reboot-WithUsers "false";

