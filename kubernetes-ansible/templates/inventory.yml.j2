all:
  children:
    k8s_masters:
      hosts:
{% for master in masters_list %}
        {{ master.name }}:
          ansible_host: {{ master.ansible_host }}
          ansible_user: {{ master.ansible_user | default(ansible_user | default('root')) }}
{% if master.vpn_ip is defined %}
          vpn_ip: {{ master.vpn_ip }}
{% endif %}
{% endfor %}
      vars:
        node_role: master
{% if vpn_server_ip %}
    vpn_server:
      hosts:
        vpn-server:
          ansible_host: {{ vpn_server_ip }}
          ansible_user: {{ ansible_user | default('root') }}
          vpn_ip: {{ vpn_network.split('/')[0] | default('10.0.0.10') }}
{% endif %}

