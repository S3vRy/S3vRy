all:
  children:
    k8s_masters:
      hosts:
        k8s-master-1:
          ansible_host: 192.168.1.10      # Replace with your master node IP
          ansible_user: root               # Replace with your SSH user
          vpn_ip: 10.0.0.1                # Optional: VPN/internal IP
        
        k8s-master-2:
          ansible_host: 192.168.1.11      # Replace with your master node IP
          ansible_user: root
          vpn_ip: 10.0.0.2
        
        k8s-master-3:
          ansible_host: 192.168.1.12      # Replace with your master node IP
          ansible_user: root
          vpn_ip: 10.0.0.3
      vars:
        node_role: master
    
